<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kyotobytes.cloudpad">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cloudfolder"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cloudfolder"
        android:supportsRtl="true"
        android:theme="@style/Theme.CloudPad">
        <activity android:name=".noteDetails"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>
        <activity android:name=".editNote"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"  />
        <activity
            android:name=".CreateNote"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".NotesMain" />
        <activity android:name=".ForgetPassword" />
        <activity android:name=".LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUp" />
    </application>

</manifest>